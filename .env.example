# Copy this to .env and adjust for your environment (local vs server)

# Primary: Single connection string used by the app (preferred)
DATABASE_URL=postgresql://user:password@localhost:5432/table

# Server example (Ubuntu VPS):
# DATABASE_URL=postgresql://user:password@localhost:5432/table

# Optional: Separate variables (only used if DATABASE_URL is not set)
# DB_NAME=table
# DB_USER=user
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# App settings (future API / web)
SECRET_KEY=change-me
DEBUG=True
PORT=8000
